<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>

    <a href="/">Back to Index</a>
    
    <table id="member-table">
        <h1>Member Table</h1>
        <thead>
            <tr>
                <th>Member ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            {{#each member}}
            <tr>
                <td>{{MemberID}}</td>
                <td>{{Name}}</td>
                <td>{{Email}}</td>
                <td>{{Height}}</td>
                <td>{{Weight}}</td>
                <td>{{Age}}</td>
                <td>
                    <button onclick="deleteMember('{{MemberID}}')">Delete</button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <h2>Add Member</h2>

    <form action="/add-member" method="POST">
        <label for="inputName">Name:</label>
        <input type="text" id="inputName" name="inputName" required>

        <label for="inputEmail">Email:</label>
        <input type="email" id="inputEmail" name="inputEmail" required>

        <label for="inputHeight">Height:</label>
        <input type="number" id="inputHeight" name="inputHeight" required>

        <label for="inputWeight">Weight:</label>
        <input type="number" id="inputWeight" name="inputWeight" required>

        <label for="inputAge">Age:</label>
        <input type="number" id="inputAge" name="inputAge" required>

        <input type="submit" value="Add Member">
    </form>

    <!-- Update Member Form -->
    <h2>Update Member</h2>
    <form id="update-member-form-ajax">
        <label for="updateSelect">Select Member:</label>
        <select name="updateSelect" id="updateSelect">
            <option value="">Select a Member</option>
            {{#each member}}
            <option value="{{this.MemberID}}">{{this.MemberID}}</option>
            {{/each}}
        </select>

        <label for="updateMemberName">Name:</label>
        <input type="text" id="updateMemberName" name="updateMemberName" required>

        <label for="updateEmail">Email:</label>
        <input type="text" id="updateEmail" name="updateEmail" required>

        <label for="updateHeight">Height:</label>
        <input type="number" id="updateHeight" name="updateHeight" required>

        <label for="updateMemberWeight">Weight:</label>
        <input type="number" id="updateMemberWeight" name="updateMemberWeight" required>

        <label for="updateAge">Age:</label>
        <input type="number" id="updateAge" name="updateAge" required>

        <input type="submit" value="Update">
    </form>

    <script src="../member/update_member.js"></script>