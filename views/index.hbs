                <td>15</td>
            </tr>
            <tr>
                <td>9</td>
                <td>Billius</td>
                <td>apersonmail@yahoo.com</td>
                <td>75</td>
                <td>200</td>
                <td>23</td>
            </tr>
        </tbody>
    </table>

    <h2>Add Member</h2>

    <form action="/add-member" method="POST">
        <label for="inputName">Name:</label>
        <input type="text" id="inputName" name="inputName" required>

        <label for="inputEmail">Email:</label>
        <input type="email" id="inputEmail" name="inputEmail" required>

        <label for="inputHeight">Height:</label>
        <input type="number" id="inputHeight" name="inputHeight" required>

        <label for="inputWeight">Weight:</label>
        <input type="number" id="inputWeight" name="inputWeight" required>

        <label for="inputAge">Age:</label>
        <input type="number" id="inputAge" name="inputAge" required>

        <input type="submit" value="Add Member">
    </form>

    <!-- Update Member Form -->
    <h2>Update Member</h2>
    <form id="update-member-form-ajax">
        <label for="updateSelect">Select Member:</label>
        <select name="updateSelect" id="updateSelect">
            <option value="">Select a Member</option>
            {{#each members}}
            <option value="{{this.MemberID}}">{{this.Name}}</option>
            {{/each}}
        </select>

        <label for="updateEmail">New Email:</label>
        <input type="text" id="updateEmail" name="updateEmail" required>

        <input type="submit" value="Update">
    </form>

    <!-- Delete Member Form -->
    <h2>Delete Member</h2>
    <form id="delete-member-form-ajax">
        <label for="deleteSelect">Select Member:</label>
        <select name="deleteSelect" id="deleteSelect">
            <option value="">Select a Member</option>
            {{#each members}}
            <option value="{{this.MemberID}}">{{this.Name}}</option>
            {{/each}}
        </select>

        <input type="submit" value="Delete">
    </form>

    <script src="/update_member.js"></script>
    <script src="/delete_member.js"></script>
    <!-- Include other JS scripts if needed -->
</html>