<html>
    <h1>Member Table</h1>

    <table id="member-table">
        <thead>
            <tr>
                <th>Member ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Height</th>
                <th>Weight</th>
                <th>Age</th>
            </tr>
        </thead>
        <tbody>
            {{#each members}}
            <tr>
                <td>{{MemberID}}</td>
                <td>{{Name}}</td>
                <td>{{Email}}</td>
                <td>{{Height}}</td>
                <td>{{Weight}}</td>
                <td>{{Age}}</td>
                <td>
                    <button onclick="updateMember('{{MemberID}}')">Update</button>
                    <button onclick="deleteMember('{{MemberID}}')">Delete</button>
                </td>
            </tr>
            {{/each}}
